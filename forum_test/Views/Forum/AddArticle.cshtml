@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "AddArticle";
}

<h2>@ViewBag.Topic.Title</h2>
<h3>Add Article</h3>
<form method="post" class="add_article_form">
    <input type="hidden" value="@User.Identity.GetUserName()" name="UserName" />
    <input type="hidden" value="@ViewBag.Topic.Id" name="TopicId" />
    <textarea class="form-control mb-5" rows="5" minlength="2" maxlength="500" placeholder="New article" name="Content"></textarea>
    <button type="submit">ADD</button>
</form>
