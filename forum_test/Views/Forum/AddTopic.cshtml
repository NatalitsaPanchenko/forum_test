@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "AddTopic";
}

<h2>@ViewBag.Title</h2>

<form method="post" >
    <div class="form-group">
        <input type="hidden" value="@User.Identity.GetUserName()" name="UserName" />
        <input class="form-control" type="text" maxlength="50" minlength="2" value="" placeholder="New topic" name="Title" />
    </div>
    <button class="btn btn-primary" type="submit" >add</button>
</form>

<p>@ViewBag.MessageError</p>
